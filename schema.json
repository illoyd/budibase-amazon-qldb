        "displayName": "ID Field Name",
        "type": "string",
        "required": true,
        "default": "documentId"
      }
    },
    "query": {
      "create": {
        "type": "json"
      },
      "read": {
        "type": "json"
      },
      "readById": {
        "type": "fields",
        "fields": {
          "id": {
            "type": "text",
            "required": true
          }
        }
      },
      "update": {
        "type": "fields",
        "fields": {
          "json": {
            "type": "json",
            "required": true
          },
          "where": {
            "type": "json",
            "required": false
          }
        }
      },
      "updateById": {
        "type": "fields",
        "fields": {
          "id": {
            "type": "text",
            "required": true
          },
          "json": {
            "type": "json",
            "required": true
          }
        }
      },
      "upsert": {
        "type": "fields",
        "fields": {
          "json": {
            "type": "json",
            "required": true
          },
          "where": {
            "type": "json",
            "required": false
          }
        }
      },
      "insertInto": {
        "type": "fields",
        "fields": {
          "field": {
            "type": "string",
            "required": true
          },
          "json": {
            "type": "json",
            "required": true
          },
          "where": {
            "type": "json",
            "required": false
          }
        }
      },
      "insertIntoById": {
        "type": "fields",
        "fields": {
          "id": {
            "type": "text",
            "required": true
          },
          "field": {
            "type": "string",
            "required": true
          },
          "json": {
            "type": "json",
            "required": true
          }
        }
      },
      "delete": {
        "type": "json"
      },
      "deleteById": {
        "type": "fields",
        "fields": {
          "id": {
            "type": "text",
            "required": true
          }
        }
      }
    },
    "extras": {
      "table": {
        "displayName": "Table",
        "type": "string",
        "required": true
      }
    }
